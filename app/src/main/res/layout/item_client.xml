<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card   ="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    card:cardCornerRadius="8dp"
    card:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/tvClientName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre Cliente"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvClientEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="email@ejemplo.com"
            android:textSize="14sp" />

        <!-- Este debe llamarse exactamente tvClientPhone -->
        <TextView
            android:id="@+id/tvClientPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="+34 600 000 000"
            android:textColor="#666"
            android:textSize="14sp" />

        <!-- Este debe llamarse exactamente tvClientBirth -->
        <TextView
            android:id="@+id/tvClientBirth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="01/01/1990"
            android:textColor="#666"
            android:textSize="14sp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
